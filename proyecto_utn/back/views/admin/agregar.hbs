<div class="contenedor agregar">
    <div class="row">
        <div class="col-6 offset-3" >
            <h4 class="row">Agregar una nueva novedad</h4>
            <form action="/admin/novedades/agregar" method="post">
            <div class="mb3 row">
                    <input type="text" class="form-control" placeholder="Titulo" name="titulo">
            </div>
            <div class="mb3 row">
                    <textarea type="text" class="form-control" placeholder="Subtitulo" 
                    name="subtitulo" ></textarea>
                   
            </div>
            <div class="mb3 row">
                    <textarea type="text" class="form-control" placeholder="Cuerpo" 
                    name="cuerpo" ></textarea>
            </div>
            <button type="submit" class="btn btn-primary agregar">Guardar</button>
            </form>
            {{#if error}}
                <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>